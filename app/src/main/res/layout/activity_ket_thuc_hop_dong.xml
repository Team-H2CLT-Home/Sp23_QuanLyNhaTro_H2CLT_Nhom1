<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/mauNenApp"
    tools:context=".KetThucHopDongActivity">
    <androidx.appcompat.widget.Toolbar
        style="@style/toolBar"
        app:title="Kết Thúc Hợp Đồng"

        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kết thúc hợp đồng cho phòng:"/>
                        <TextView
                            android:id="@+id/tvTenPhongXuLyPhong"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/mauDo"
                            android:textStyle="bold"
                            android:text="A101"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tvTenKhuXuLyPhong"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:text="Khu A"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#616060"
                        android:layout_marginTop="5dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <CheckBox
                            android:id="@+id/checkXuLyPhong"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Đang ở"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content" />
                        <androidx.cardview.widget.CardView
                            android:id="@+id/sapHetHopDong"
                            android:layout_width="80dp"
                            android:layout_height="40dp"
                            android:layout_margin="5dp"
                            android:backgroundTint="@color/mauNenApp"
                            app:cardCornerRadius="8dp">
                            <TextView
                                android:id="@+id/tvThoiHanXuLyHopDong"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_gravity="center"
                                android:textColor="@color/mauDo"
                                android:textStyle="bold"
                                android:text="Sắp hết"/>
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <!--////phần thứ 2-->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:cardCornerRadius="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:textColor="@color/black"
                        android:text="Ngày kết thúc hợp đồng "/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#595858"
                        android:layout_marginLeft="5dp"
                        android:text="là ngày khách hàng không còn thuê phòng"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#616060"
                        android:layout_marginTop="5dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardviewNgayXuLyPhong"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:backgroundTint="#F3F8F1F1"
                            app:cardCornerRadius="8dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="5dp"
                                        android:text="Chọn ngày muốn chấm dứt hợp đồng"/>
                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:layout_margin="5dp"
                                        android:textColor="@color/mauDo"
                                        android:text="*"/>
                                    <ImageView
                                        android:id="@+id/imgXoaNgayXuLyHopDong"
                                        android:src="@drawable/icon_delete"
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:textColor="@color/black"
                                        android:layout_margin="5dp"
                                        />

                                </LinearLayout>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:layout_margin="5dp"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    android:text="2022-12-03"/>


                            </LinearLayout>


                        </androidx.cardview.widget.CardView>

                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/icon_xu_lyhd"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:layout_marginLeft="5dp"
                            android:text="Công việc cần làm trước khi kết thúc hợp đồng"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <androidx.cardview.widget.CardView
                            android:layout_width="60dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="10dp"
                            android:backgroundTint="@color/mauNenApp"
                            app:cardCornerRadius="8dp">
                            <TextView
                                android:id="@+id/tvCongViecXuLyPhong"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_gravity="center"
                                android:textColor="@color/mauDo"
                                android:textStyle="bold"
                                android:text="0/2"/>
                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:text="Công việc đã làm xong"/>
                    </LinearLayout>
                    <!--            ////kiem tra-->

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#F4F3F3"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="8dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:orientation="horizontal">
                                <ImageView
                                    android:id="@+id/imgXoaKiemTraXuLyPhong"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_marginLeft="5dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/icon_xoa"/>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Kiểm tra tài sản"
                                        android:layout_marginLeft="20dp"
                                        android:textColor="@color/black"
                                        android:textSize="23dp"
                                        android:textStyle="bold"/>
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Công việc không bắt buộc"
                                        android:layout_marginLeft="20dp"
                                        android:textColor="#6E6D6D"
                                        />
                                </LinearLayout>

                            </LinearLayout>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Kiểm tra tài sản, thiết bị trong trước khi kết thúc hợp đồng"
                                android:layout_marginLeft="20dp"
                                android:textColor="#6E6D6D"
                                />
                            <Button
                                android:id="@+id/btn_KiemTraTaiSan"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="20dp"
                                android:layout_gravity="center"
                                android:text="Đã thực hiện"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <!--            ////kiem tra2-->

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#F4F3F3"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="8dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:orientation="horizontal">
                                <ImageView
                                    android:id="@+id/imgXoaThanhToanXuLyPhong"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_marginLeft="5dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/icon_xoa"/>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Thanh toán tiền cọc"
                                        android:layout_marginLeft="20dp"
                                        android:textColor="@color/black"
                                        android:textSize="23dp"
                                        android:textStyle="bold"/>
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="20dp"
                                        android:orientation="horizontal">
                                        <ImageView
                                            android:layout_width="20dp"
                                            android:layout_height="20dp"
                                            android:src="@drawable/icon_chu_y"/>
                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="Công việc bắt buộc"
                                            android:layout_marginLeft="10dp"
                                            android:textColor="#6E6D6D"
                                            />
                                    </LinearLayout>

                                </LinearLayout>

                            </LinearLayout>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Kiểm tra tài sản, thiết bị trong trước khi kết thúc hợp đồng"
                                android:layout_marginLeft="20dp"
                                android:textColor="#6E6D6D"
                                />
                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="10dp"

                                android:backgroundTint="#EAE6E6"
                                android:layout_margin="25dp">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="10dp"
                                    android:orientation="vertical">
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:textColor="@color/black"
                                            android:layout_height="wrap_content"
                                            android:text="Số tiền đã cọc: "/>
                                        <TextView
                                            android:id="@+id/tvSoTienCocXuLyPhong"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textColor="@color/mauDo"
                                            android:layout_marginLeft="20dp"
                                            android:text="2.000.000đ "/>
                                    </LinearLayout>
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="7dp"
                                        android:orientation="horizontal">
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:textColor="@color/black"
                                            android:layout_height="wrap_content"
                                            android:text="Chi tiết thiệt hại: "/>
                                        <TextView
                                            android:id="@+id/tvTienThietHaiXuLyPhong"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textColor="@color/mauDo"
                                            android:layout_marginLeft="20dp"
                                            android:text="0đ "/>
                                    </LinearLayout>
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="1dp"
                                        android:background="@color/black"
                                        android:layout_marginTop="5dp"/>
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="7dp"
                                        android:orientation="horizontal">
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:textColor="@color/black"
                                            android:layout_height="wrap_content"
                                            android:text="Còn lại: "/>
                                        <TextView
                                            android:id="@+id/tvTienConLaiXuLyPhong"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textColor="@color/mauDo"
                                            android:layout_marginLeft="80dp"
                                            android:text="0đ "/>
                                    </LinearLayout>
                                    <Button
                                        android:id="@+id/btnDaThucHienXuLyPhong"
                                        android:layout_width="200dp"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="20dp"
                                        android:layout_gravity="center"
                                        android:text="Đã thực hiện"/>
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <Button
                        android:id="@+id/btnXoaThongTinPhong"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:layout_gravity="center"
                        android:text="Xóa thông tin phòng"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>


</LinearLayout>