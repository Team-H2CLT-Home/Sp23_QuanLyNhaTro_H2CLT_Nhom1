<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_margin="15dp"
    android:background="@drawable/boder_nen"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="1dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvChiTietNguoiDungTenPhong"
                android:layout_width="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:textColor="@color/mauChinhApp"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:text="#PH29166"/>
            <ImageView
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="0dp"
                android:layout_gravity="center"
                android:src="@drawable/avatar"
                />
        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:layout_margin="10dp"
            android:layout_marginLeft="10dp"
            android:backgroundTint="#FAF6F6">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

                <TextView
                    android:id="@+id/tvChiTietNguoiThueHoTen"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:fontFamily="@font/akaya_telivigala"
                    android:textSize="20sp"
                    android:layout_marginLeft="7dp"
                    android:textColor="@color/black"
                    android:text="Họ Tên: Lê Tiến Thành"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="2dp"
                android:background="#717070"/>
                <TextView
                    android:id="@+id/tvChiTietNguoiThueSDT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:layout_marginLeft="7dp"

                    android:text="SĐT: 0859992222"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="2dp"
                android:background="#717070"/>
            <TextView
                android:id="@+id/tvChiTietNguoiThueNgaySinh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginLeft="7dp"
                android:textSize="20dp"
                android:text="Ngày sinh: 2003-05-02"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="2dp"
                android:background="#717070"/>
            <TextView
                android:id="@+id/tvChiTietNguoiThueCCCD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginLeft="7dp"
                android:textSize="20dp"
                android:text="Số CCCD: 0322181111111"/>

        </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <TextView
        android:id="@+id/tvChiTietNguoiThueQueQuan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_marginLeft="6dp"
        android:textSize="20dp"
        android:layout_marginRight="6dp"
        android:text="Quê quán: Thôn 1, Xã 1, Huyện Đông Triều, Thành phố Hạ Long, tỉnh Quảnh Ninh"/>

    <Button
        android:id="@+id/btnDongChiTietNguoiThue"
        style="@style/button"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="Đóng" />
</LinearLayout>