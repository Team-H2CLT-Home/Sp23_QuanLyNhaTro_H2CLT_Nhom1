<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_margin="15dp"
    android:background="@color/mauNenApp"

    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="1dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvChiTietNguoiDungTenPhong"
                android:layout_width="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:text="#PH29166"/>
            <ImageView
                android:layout_width="130dp"
                android:layout_height="150dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:src="@drawable/avatar"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvChiTietNguoiThueHoTen"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:fontFamily="@font/akaya_telivigala"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:text="Họ Tên: Lê Tiến Thành"/>
            <TextView
                android:id="@+id/tvChiTietNguoiThueSDT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_marginTop="5dp"
                android:text="SĐT: 0859992222"/>
            <TextView
                android:id="@+id/tvChiTietNguoiThueNgaySinh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:text="Ngày sinh: 2003-05-02"/>
            <TextView
                android:id="@+id/tvChiTietNguoiThueCCCD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:text="Số CCCD: 0322181111111"/>

        </LinearLayout>

    </LinearLayout>
    <TextView
        android:id="@+id/tvChiTietNguoiThueQueQuan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_marginLeft="2dp"
        android:textSize="20dp"
        android:text="Quê quán: Thôn 1, Xã 1, Huyện Đông Triều, Thành phố Hạ Long, tỉnh Quảnh Ninh"/>
    <Button
        android:id="@+id/btnDongChiTietNguoiThue"
        style="@style/button"
        android:text="Đóng"/>
</LinearLayout>